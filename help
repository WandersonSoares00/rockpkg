#!/bin/sh

usage() {
    cat <<EOF
Usage: rockpkg [OPTIONS] [ARCHIVE]

Low level package manager
    -h, --help
          Show options
    -c, --create
          Create a package
    -i, --install
          Install one or more packages
    -I, --info
          Make a directory with package information if no archive is provided.
          if so, show information about this package.
    -r, --remove
          Remove an installed package
    -v, --verbose
          Look more information
    -l, --list
          List all programs installed by rockpkg
EOF
}
